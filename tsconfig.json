{
  "compilerOptions": {
    "noImplicitAny": false,
    "types": [
      "jest",
      "node",
      "angular",
    ],
    "allowJs": true,
    "lib": ["es2020", "es2019", "es2017", "es7", "es6", "dom", "esnext.asynciterable", "esnext.array"],
    "baseUrl": "./public",
    "target": "es6",
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/bower_components/*",
    "**/vendor/*",
    "perf/*",
    "*.built.*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*Test.*",
    "**/*.js",
    "**/OldNotebookTests",
  ]
}
